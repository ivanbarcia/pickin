@page
@model Pickin.Pages.Company.CartModel
@{
    ViewData["Title"] = "Cart";
    Layout = "/Pages/Shared/_Front_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-9">
            <div class="ibox">
                <div class="ibox-title">
                    <span class="pull-right">(<strong>@Model.Productos.Count()</strong>) productos</span>
                    <h5>Productos</h5>
                </div>
                @foreach (var item in Model.Productos)
                {
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table shoping-cart-table">
                                <tbody>
                                    <tr>
                                        <td width="90">
                                            <div class="cart-product-imitation">
                                                @if (item.Image != null)
                                                {
                                                    <img alt="@item.Id" class="img-circle" src="data:image/jpg;base64,@Convert.ToBase64String(item.Image)" />
                                                }
                                            </div>
                                        </td>
                                        <td class="desc">
                                            <h3>
                                                <a href="#" class="text-navy">
                                                    @item.Nombre
                                                </a>
                                            </h3>
                                            <p class="small">
                                                @item.Descripcion
                                            </p>
                                            <p>
                                                $@item.Precio
                                                <s class="small text-muted">$@item.Precio</s>
                                            </p>
                                            @*<div class="m-t-sm">
                                                    <a href="#" class="text-muted"><i class="fa fa-gift"></i> Add gift package</a>
                                                    |
                                                    <a href="#" class="text-muted"><i class="fa fa-trash"></i> Remove item</a>
                                                </div>*@
                                        </td>

                                        @*<td>
                                                $@item.Precio
                                                <s class="small text-muted">$@item.Precio</s>
                                            </td>*@
                                        <td width="55">
                                            <input type="text" class="form-control" placeholder="0">
                                        </td>
                                        <td>
                                            <h4>
                                                $@item.Precio
                                            </h4>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                <div class="ibox-content">

                    <button class="btn btn-primary pull-right"><i class="fa fa fa-shopping-cart"></i> Confirmar</button>
                    <button class="btn btn-white"><i class="fa fa-arrow-left"></i> Modificar Datos</button>

                </div>
            </div>

        </div>
        <div class="col-md-3">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>Cart Summary</h5>
                </div>
                <div class="ibox-content">
                    <span>
                        Total
                    </span>
                    <h2 class="font-bold">
                        $<span id="total_importe"></span>
                    </h2>

                    <hr />
                    <span class="text-muted small">
                        *For United States, France and Germany applicable sales tax will be applied
                    </span>
                    <div class="m-t-sm">
                        <div class="btn-group">
                            <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-shopping-cart"></i> Checkout</a>
                            <a href="#" class="btn btn-white btn-sm"> Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

